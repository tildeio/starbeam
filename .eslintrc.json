{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": "./tsconfig.json" },
  "ignorePatterns": [""],

  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    },
    "import/ignore": ["\\.js\\?script"]
  },

  "overrides": [
    {
      "files": [
        "./packages/**/*.{d.,}ts",
        "./framework/**/*.ts{x,}",
        "./@types/**/*.ts"
      ],
      "extends": ["./eslintrc.shared.json"],
      "excludedFiles": ["packages/x-devtool/**"],
      "parserOptions": {
        "sourceType": "module",
        "project": "./tsconfig-packages.json"
      }
    },
    {
      "files": ["./packages/x-devtool/**/*.ts{x,}"],
      "extends": ["./eslintrc.shared.json"],
      "parserOptions": {
        "sourceType": "module",
        "project": "./tsconfig-devtool.json"
      }
    },
    {
      "files": ["demos/react*/**/*.ts{x,}"],
      "extends": ["./eslintrc.shared.json"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "sourceType": "module",
        "project": "./tsconfig-react-demos.json"
      }
    },
    {
      "files": ["./rollup.config.ts", "./.build/**/*.ts", "**/vite.config.ts"],
      "extends": ["./eslintrc.shared.json"],
      "parserOptions": { "project": "./tsconfig-rollup.json" }
    }
  ]
}
